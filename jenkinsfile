pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'building..'
            }
        }
        stage('Test') {
            steps {
                echo 'testing...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'deploying..'
                error 'fails'
            }
        }
    }
    post{
        always{
            echo 'I will run whether the job run or not'
        }
        success{
            echo 'I will run when the job was success'
        }
        failure{
            echo 'I will run when the job was failed'
        }
    }
}